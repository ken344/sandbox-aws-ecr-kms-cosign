# Terraform Variables Example
# 
# このファイルを terraform.tfvars にコピーして使用してください
# cp terraform.tfvars.example terraform.tfvars

# AWS設定
aws_region = "ap-northeast-1"

# tfstate用S3バケット名
# setup-tfstate-bucket.sh で作成したバケット名を指定
tfstate_bucket_name = "sandbox-ecr-kms-tfstate-123456789012-ap-northeast-1"

# プロジェクト設定
project_name = "sandbox-ecr-kms"
environment  = "dev"

# ECR ライフサイクル設定
# この数を超えるイメージは自動的に削除されます
ecr_lifecycle_image_count = 10

# KMS削除待機期間（日数）
kms_deletion_window_days = 7

